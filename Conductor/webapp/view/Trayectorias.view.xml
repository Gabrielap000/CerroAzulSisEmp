<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.conductor.controller.Trayectorias" xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
